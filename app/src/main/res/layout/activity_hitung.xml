<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Hitung">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="413dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jenisBangunDatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Bangun Datar"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gambarJenisBangunDatar"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/bangundatar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="50dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nilai1Inputan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nilai1InputanEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nilai2Inputan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nilai2InputanEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_button"
            android:onClick="prosesHitung"
            android:text="Hitung"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/hasilLuas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hasil"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

    </LinearLayout>


</LinearLayout>